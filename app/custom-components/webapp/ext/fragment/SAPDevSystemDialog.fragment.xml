<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="sapDevSystemDialog"
        title="Select SAP Development System">
        <List id="sapDevSystemList"
            items="{path: '/SAPDevelopmentSystemCodeList'}">
            <StandardListItem title="{name}"
                type="Active"
                press=".onSelect"
                description="{code}" />
        </List>
        <endButton>
            <Button text="Cancel"
                press=".onCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>